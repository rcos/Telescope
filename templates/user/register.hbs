<div class="card text-dark card-text">
    <h1 class="card-header">
        Create Account
    </h1>
    <div class="card-body">
        <form method="post">
            <div class="card border-primary mb-2">
                <div class="card-body h4 m-0 p-1">
                    {{#if icon}}
                        {{#if (eq icon "discord")}}
                            {{! Use font-awesome Discord icon }}
                            <span class="fab">&#xf392;</span>
                        {{else}}
                            {{! This should just apply to github }}
                            <i style="width: 44px;height: 44px;" data-feather="{{icon}}"></i>
                        {{/if}}
                    {{/if}}

                    {{! Platform dependent user info}}
                    {{#with info}}
                        {{#if avatar_url}}
                            <img src="{{avatar_url}}" class="ml-1 mr-3" alt="Profile Picture" style="width:40px; height:auto; border-radius:50%;">
                        {{/if}}

                        {{#if profile_url}}
                            <a href="{{profile_url}}">{{username}}</a>
                        {{else}}
                            <span>{{username}}</span>
                        {{/if}}
                    {{/with}}
                </div>
            </div>

            {{! Form fields }}
            {{! First name }}
            <div class="form-group form-row">
                <label for="fname" class="col-md-2 col-form-label">
                    First Name
                </label>
                <div class="col-md-10">
                    <input id="fname" type="text" name="first_name" placeholder="John"
                        {{#with first_name.value}} value="{{this}}" {{else}} {{! Don't prefill no value }} {{/with}}

                        {{! Link feedback tooltip }}
                        {{#if first_name.error}}
                           class="form-control is-invalid"
                           aria-labelledby="fname-invalid"
                        {{else}}
                           class="form-control"
                        {{/if}}

                        required>

                    {{! Feedback tooltip }}
                    {{#with first_name.error}}
                        <div id="fname-invalid" class="invalid-feedback">
                            {{this}}
                        </div>
                    {{else}}
                        {{! No tooltip }}
                    {{/with}}
                </div>
            </div>

            {{! Last name }}
            <div class="form-group form-row">
                <label for="lname" class="col-md-2 col-form-label">
                    Last Name
                </label>
                <div class="col-md-10">
                    <input id="lname" type="text" name="last_name" placeholder="Appleseed"
                        {{#with last_name.value}} value="{{this}}" {{else}} {{! no last name }} {{/with}}

                        {{! Link feedback tooltip }}
                        {{#if last_name.error}}
                           class="form-control is-invalid"
                           aria-labelledby="lname-invalid"
                        {{else}}
                           class="form-control"
                        {{/if}}

                        required>

                    {{! Feedback tooltip }}
                    {{#with last_name.error}}
                        <div id="lname-invalid" class="invalid-feedback">
                            {{this}}
                        </div>
                    {{else}}
                        {{! No feedback tooltip }}
                    {{/with}}
                </div>
            </div>

            <div class="form-group d-block float-right">
                <button class="btn btn-primary btn-spinner" type="submit">
                    Create Account
                </button>
            </div>
        </form>
    </div>
</div>
