<form method="post" action="/login">
    <div class="form-group">
        <label for="login-modal-email-input">Email Address</label>
        <input
                type="email"
                class="form-control"
                placeholder="example@email.org"
                id="login-modal-email-input"
                name="email"
                required>
    </div>
    <div class="form-group">
        <label for="login-modal-pass-input">Password</label>
        <input
                type="password"
                class="form-control"
                id="login-modal-pass-input"
                name="pass"
                required>
    </div>
    <button class="btn btn-primary" type="submit">Login</button>
    <a class="btn btn-secondary" role="button" href="/forgot">Forgot Password</a>
</form>
